rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /stories/{userId} {
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        (
          request.resource.data.keys().hasOnly(['viewedBy']) &&
          request.resource.data.viewedBy == resource.data.viewedBy.union([request.auth.uid])
        )
      );

    }

    // Allow chat participants to read chat documents so Storage rules
    // can verify membership before granting access to chat media.
    match /artifacts/{project}/public/data/chats/{chatId} {
      allow read: if request.auth != null &&
        resource.data.participants.hasAny([request.auth.uid]);
    }
  }
}
