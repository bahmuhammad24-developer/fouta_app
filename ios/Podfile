# Disable warnings for simulator builds.
# For more information, see: https://github.com/flutter/flutter/issues/115583
ENV['COCOAPODS_DISABLE_DART_SUBPROCESS'] = 'true'

# Allowlist of Flutter plugins that require a minimum iOS version.
$flutter_minimum_ios_version_plugins = {
}

# DO NOT MODIFY NEXT LINE. It is generated by Flutter.
load File.join(File.dirname(File.realpath(__FILE__)), '..', 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  flutter_post_install(installer)

  # --- Start Fouta Patch: Remove -G Flag ---
  # This block iterates through all installed pod targets and removes
  # the unsupported '-G' compiler flag that causes build failures with
  # certain older Firebase dependencies. This logic is now embedded
  # directly in the Podfile for maximum reliability.
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['OTHER_CFLAGS']&.delete('-G')
    end
  end
  # --- End Fouta Patch ---
end