# This bootstrap line is the key. It loads the helper script from the
# .dart_tool directory, which is generated by `flutter pub get`.
require_relative '../.dart_tool/flutter/podhelper.rb'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # This function now works because the podhelper script was loaded above.
  flutter_install_all_ios_pods
end

post_install do |installer|
  flutter_post_install(installer)
end